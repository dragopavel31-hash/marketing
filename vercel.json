{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/build/$1",
      "headers": {
        "Cache-Control": "s-maxage=31536000, immutable"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/build/index.html",
      "status": 200
    }
  ]
}
